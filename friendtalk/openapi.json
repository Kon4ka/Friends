      "type": "object",
      "properties": {
        "id": {
          "title": "ID",
          "type": "integer",
          "readOnly": true
        },
        "from_user": {
          "title": "From user",
          "type": "integer"
        },
        "to_user": {
          "title": "To user",
          "type": "integer"
        },
        "timestamp": {
          "title": "Timestamp",
          "type": "string",
          "format": "date-time",
          "readOnly": true
        },
        "status": {
